{{>/layout/post-header}}

<div class="container">
    <p style="font-size: large"><b>구독 중인 블로그</b></p>
    <hr>

    <div class="row">
        {{#model.subDTOs}}
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <p style="font-size: large"><b>{{username}}</b> 블로그</p>
                        <input type="hidden" id="userId" name="userId" value="{{toUser}}">
                        <div>
                            <button class="btn btn-sm btn-danger" style="width: 130px;" onclick="subscribeCancel()">구독취소</button>
                        </div>
                    </div>
                    <div style="margin-left: 28px; margin-bottom: 5px">{{title}}</div>
                </div>
            </div>
        {{/model.subDTOs}}
    </div>


</div>

<script>
    function subscribeCancel() {
        let userId = $("#userId").val();
        console.log("userId " + userId);

        let subscribeSave = {
            subscribeId: userId
        }
        console.log(JSON.stringify(subscribeSave));

        $.ajax({
            url: '/sub/cancel',
            data: JSON.stringify(subscribeSave),
            contentType: 'application/json; charset=utf-8',
            type: 'POST'

        }).done((res) => {
            // alert("gg");
            // console.log("성공", res);
            Swal.fire({
                title: "구독 취소 완료",
                icon: "success",
                button: "확인"

            }).then(() => {
                window.location.href = "/sub/subscribe";

            });

        }).fail((res) => {
            console.log("실패", res);

        });
    }
</script>


{{>/layout/footer}}